{
  "name": "sakevanews-backend",
  "version": "1.0.0",
  "description": "Backend для SakevaNews - новостного сайта игроков сервера Sakeva",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "npm run build:full && NODE_ENV=production node dist/server.js",
    "init-db": "ts-node scripts/init-db.ts",
    "build:full": "npm run build && cd ../frontend && npm install && npm run build",
    "start:prod": "NODE_ENV=production node dist/server.js"
  },
  "keywords": [
    "sakeva",
    "news",
    "backend"
  ],
  "author": "Sakeva Team",
  "license": "MIT",
  "dependencies": {
    "@types/validator": "^13.15.10",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.7.0",
    "recharts": "^3.6.0",
    "sequelize": "^6.35.2",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
